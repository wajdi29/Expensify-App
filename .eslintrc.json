{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "babel"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "no-unused-vars": "off",
        "react/jsx-key": "off",
        "no-undef": "off",
        "react/prop-types": "off"
    },
    "globals": {
        "ReactDOM": true
    },
    "parser": "babel-eslint"
}